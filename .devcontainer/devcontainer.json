{
  "name": "mowbot_legacy_gui",
  // "image": "python:3.10.12",
  "image": "ghcr.io/serene4uto/mowbot-legacy-gui:latest",
  "runArgs": [
    "--name",
    "mowbot_gui",
    "--net",
    "host",
    // "--gpus", "all",
    "--privileged",
    "-v",
    "/dev:/dev",
    "-v",
    "/tmp/.X11-unix:/tmp/.X11-unix",
    "-e",
    "DISPLAY"
  ],
  "postCreateCommand": "pip install --upgrade pip && pip install pylint autopep8",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "eamodio.gitlens"
      ]
    }
  }
}